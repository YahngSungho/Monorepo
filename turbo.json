{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env", ".env.*", "**/.env", "**/.env.*"],
	"globalEnv": [
		"SENTRY_ORG",
		"SENTRY_PROJECT",
		"NODE_ENV",
		"MAILGUN",
		"MAILGUN_SENDING",
		"PUBLIC_SUPABASE_URL",
		"PUBLIC_SUPABASE_ANON_KEY",
		"OPENAI_API_KEY",
		"GOOGLE_GENERATIVE_AI_API_KEY",
		"SENTRY_AUTH_TOKEN",
		"VITE_PUBLIC_SUPABASE_URL",
		"VITE_PUBLIC_SUPABASE_ANON_KEY",
		"SUPABASE_ADMIN_KEY",
		"PUBLIC_SUPABASE_PUBLISHABLE_KEY",
		"GITHUB_ACTIONS"
	],
	"globalPassThroughEnv": ["CI", "WATCH"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": [],
			"inputs": ["$TURBO_DEFAULT$", "!**/*.stories.*"],
			"outputs": [".svelte-kit/**", "paraglide-output/**"]
		},
		"@library/backends#build": {
			"cache": false
		},
		"@library/paraglide#build": {
			"cache": false
		},
		"@tool/storybook#build": {
			"inputs": ["$TURBO_DEFAULT$"],
			"outputs": ["storybook-static/**"]
		},
		"change-base-locale:en": {},
		"change-base-locale:ko": {},
		"check": {
			"dependsOn": ["transit"]
		},
		"dev": {
			"cache": false,
			"env": [],
			"persistent": true,
			"inputs": ["$TURBO_DEFAULT$"]
		},
		"eslint": {},
		"eslint-fix": {},
		"format": {},
		"playwright-report": {},
		"stylelint": {},
		"stylelint-fix": {},
		"test:e2e": {
			"dependsOn": ["transit", "build"],
			"env": ["PLAYWRIGHT_BROWSERS_PATH"],
			"outputs": ["playwright-report/**", "test-results/**"],
			"passThroughEnv": ["PLAYWRIGHT_*", "CI"]
		},
		"test:unit": {
			"dependsOn": ["transit"],
			"outputs": ["vitest-report/**"]
		},
		"transit": {
			"dependsOn": ["^transit"]
		},
		"translate": {
			"cache": false
		}
	}
}
