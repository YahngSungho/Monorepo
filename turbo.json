{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*", "CI"],
	"globalEnv": ["NODE_ENV"],
	"globalPassThroughEnv": [],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": [],
			"inputs": [
				"$TURBO_DEFAULT$",
				"!**/*.stories.{js,ts,svelte,tsx,jsx,mdx}",
				"**/.env.*",
				".env.production.local",
				".env.local",
				".env.production",
				".env"
			],
			"outputs": ["dist/**", ".svelte-kit/**", "storybook-static/**"]
		},
		"check": {
			"dependsOn": ["transit"]
		},
		"dev": {
			"cache": false,
			"env": [],
			"inputs": [
				"$TURBO_DEFAULT$",
				"!**/*.stories.{js,ts,svelte,tsx,jsx,mdx}",
				"**/.env.*",
				".env.production.local",
				".env.local",
				".env.production",
				".env"
			],
			"persistent": true
		},
		"eslint": {},
		"stylelint": {},
		"test": {
			"dependsOn": ["transit"]
		},
		"test:e2e": {
			"dependsOn": ["transit", "build"],
			"env": ["CI"],
			"outputs": ["test-results", "playwright-report"],
			"passThroughEnv": ["PLAYWRIGHT_*", "CI"]
		},
		"test:unit": {
			"dependsOn": ["transit"]
		},
		"transit": {
			"dependsOn": ["^transit"]
		}
	}
}
