{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*", "CI"],
	"globalEnv": ["NODE_ENV"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"!**/*.stories.{js,ts,svelte,tsx,jsx,mdx}",
				".env.production.local",
				".env.local",
				".env.production",
				".env"
			],
			"outputs": ["dist/**", ".svelte-kit/**", "storybook-static/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"check": {},
		"lint": {},
		"lint-fix": {
			"dependsOn": ["@repo/root#format-changed"]
		},
		"eslint": {},
		"stylelint": {},
		"test": {},
		"test:unit": {},
		"test:e2e": {
			"dependsOn": ["build"],
			"env": ["CI"],
			"outputs": ["test-results", "playwright-report"],
			"passThroughEnv": ["PLAYWRIGHT_*", "CI"]
		}
	}
}
