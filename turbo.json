{
	"$schema": "https://turborepo.com/schema.json",
	"globalEnv": [
		"PUBLIC_SUPABASE_URL",
		"PUBLIC_SUPABASE_ANON_KEY",
		"PUBLIC_SUPABASE_PUBLISHABLE_KEY",
		"GITHUB_ACTIONS",
		"CI",
		"NODE_ENV"
	],
	"globalPassThroughEnv": [
		"WATCH",
		"SENTRY_ORG",
		"SENTRY_PROJECT",
		"MAILGUN",
		"MAILGUN_SENDING",
		"OPENAI_API_KEY",
		"GOOGLE_GENERATIVE_AI_API_KEY",
		"SENTRY_AUTH_TOKEN",
		"SUPABASE_ADMIN_KEY"
	],
	"tasks": {
		"deploy": {
			"dependsOn": ["^deploy", "build"],
			"cache": false
		},
		"deploy:env-vars": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"]
		},
		"@library/paraglide#build": {
			"dependsOn": ["^build", "change-base-locale:en"],
			"outputs": ["paraglide-output/**"]
		},
		"@tool/storybook#build": {
			"dependsOn": ["^build"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"../../*/*/src/**/*.stories.*",
				"../../apps/*/src/**/*.{js,svelte}",
				"../../libraries/ui/src/**/*.{js,svelte}"
			],
			"outputs": ["storybook-static/**"]
		},
		"change-base-locale:en": {
			"cache": false
		},
		"change-base-locale:ko": {
			"cache": false
		},
		"check": {
			"dependsOn": ["transit"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"eslint": {},
		"eslint-fix": {},
		"format": {},
		"playwright-report": {
			"cache": false
		},
		"stylelint": {},
		"stylelint-fix": {},
		"test:e2e": {
			"dependsOn": ["transit", "build"],
			"env": ["PLAYWRIGHT_BROWSERS_PATH"],
			"outputs": ["playwright-report/**", "test-results/**"],
			"passThroughEnv": ["PLAYWRIGHT_*", "CI"]
		},
		"test:unit": {
			"dependsOn": ["transit"],
			"outputs": ["vitest-report/**"]
		},
		"transit": {
			"dependsOn": ["^transit"]
		},
		"update-translations": {
			"cache": false
		},
		"fix-markdown-text": {
			"cache": false
		}
	}
}
