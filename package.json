{
	"private": true,
	"name": "@repo/root",
	"type": "module",
	"scripts": {
		"all-packages-update": "pnpm up --recursive",
		"build": "turbo run build",
		"clean": "rm -rf .turbo && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm -f package-lock.json + && pnpm store prune && pnpm install",
		"dev": "turbo run dev",
		"dev:boiler_plates": "turbo run dev --filter=boiler_plates --filter=storybook",
		"fix-mismatches": "pnpm dlx syncpack fix-mismatches",
		"eslint": "eslint . --format=pretty",
		"format": "prettier --write .",
		"format-changed": "pretty-quick --write .",
		"generate:app": "sh -c 'turbo gen workspace --type app --copy boiler_plates --name $1 --destination ./apps/$1' dummy",
		"lint": "turbo run lint && eslint .",
		"test": "turbo run test",
		"test:e2e": "turbo run test:e2e",
		"update-and-fix": "pnpm run all-packages-update && pnpm run fix-mismatches"
	},
	"dependencies": {
		"@inlang/paraglide-sveltekit": "0.15.5",
		"dotenv": "^16.4.7",
		"pnpm": "^9.15.5"
	},
