{
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[gitignore]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[ignore]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[svelte]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[yaml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"bookmarks.useWorkaroundForFormatters": true,
	"codium.codeCompletion.enable": false,
	"css.styleSheets": ["*/*/src/**/*.css"],
	"cssVariables.lookupFiles": [
		"libraries/base/node_modules/open-props/open-props.min.css",
		"libraries/base/base.css",
		"**/*.css",
		"**/*.scss",
		"**/*.sass",
		"**/*.less"
	],
	"deno.enable": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.inlineSuggest.enabled": true,
	"editor.quickSuggestions": {
		"strings": "on"
	},
	"editor.semanticHighlighting.enabled": true,
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"eslint.probe": [
		"css",
		"svelte",
		"html",
		"postcss",
		"jsx",
		"tsx",
		"js",
		"ts",
		"md",
		"mdx",
		"json",
		"jsonc",
		"json5",
		"toml",
		"yaml",
		"yml",
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"javascriptsvelte"
	],
	"eslint.run": "onSave",
	"eslint.useESLintClass": true,
	"eslint.useFlatConfig": true,
	"eslint.validate": [
		"css",
		"svelte",
		"html",
		"postcss",
		"jsx",
		"tsx",
		"js",
		"ts",
		"md",
		"mdx",
		"json",
		"jsonc",
		"json5",
		"toml",
		"yaml",
		"yml",
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"javascriptsvelte"
	],
	"files.associations": {
		"*.css": "tailwindcss",
		"*.svx": "markdown",
		"*.mdc": "markdown",
		"*.mdx": "markdown"
	},
	"peacock.color": "#79021b",
	"prettier.endOfLine": "lf",
	"prettier.experimentalTernaries": false,
	"prettier.jsxSingleQuote": true,
	"prettier.semi": false,
	"prettier.singleAttributePerLine": false,
	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"prettier.vueIndentScriptAndStyle": false,
	"stylelint.validate": ["css", "scss", "svelte"],
	"svelte.plugin.svelte.format.config.singleQuote": true,
	"svelte.plugin.svelte.format.config.svelteAllowShorthand": true,
	"svelte.plugin.svelte.format.config.svelteIndentScriptAndStyle": true,
	"tailwindCSS.classFunctions": ["tw", "clsx"],
	"tailwindCSS.emmetCompletions": true,
	"tailwindCSS.experimental.configFile": {
		"libraries/base/src/tailwind.css": [
			"**/*.svelte",
			"**/*.css",
			"**/*.html",
			"**/*.js",
			"**/*.ts",
			"**/*.md",
			"**/*.mdx",
			"**/*.mdc",
		]
	},
	// Svelte 파일 내에서 Tailwind 클래스 자동 완성 활성화
	"tailwindCSS.includeLanguages": {
		"plaintext": "html",
		"svelte": "html",
		"javascript": "javascript",
		"typescript": "typescript"
	},
	"tailwindCSS.validate": true,
	"typescript.tsdk": "node_modules/typescript/lib",
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#ab0326",
		"activityBar.background": "#ab0326",
		"activityBar.foreground": "#e7e7e7",
		"activityBar.inactiveForeground": "#e7e7e799",
		"activityBarBadge.background": "#239d03",
		"activityBarBadge.foreground": "#e7e7e7",
		"commandCenter.border": "#e7e7e799",
		"editorGroup.border": "#ab0326",
		"sash.hoverBorder": "#ab0326",
		"sideBar.border": "#ab0326",
		"statusBar.background": "#79021b",
		"statusBar.foreground": "#e7e7e7",
		"statusBarItem.hoverBackground": "#ab0326",
		"statusBarItem.remoteBackground": "#79021b",
		"statusBarItem.remoteForeground": "#e7e7e7",
		"titleBar.activeBackground": "#79021b",
		"titleBar.activeForeground": "#e7e7e7",
		"titleBar.inactiveBackground": "#79021b99",
		"titleBar.inactiveForeground": "#e7e7e799"
	}
}
