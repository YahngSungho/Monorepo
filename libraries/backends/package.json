{
	"name": "@library/backends",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "pnpm run build:cloudflare",
		"build:cloudflare": "node ./src/cloudflare/generateWranglers.js",
		"depCheck": "npx depcheck",
		"eslint": "eslint . --ignore-pattern **/*.md --ignore-pattern **/*.mdx",
		"eslint-fix": "eslint --fix . --config ../../eslint.fix.config.js || true",
		"format": "prettier . \"!**/*.md\" \"!**/*.mdx\" --write --ignore-unknown --ignore-path ../../.prettierignore",
		"test:unit": "vitest run"
	},
	"dependencies": {
		"@library/helpers": "workspace:*",
		"@library/library-bottom": "workspace:*",
		"@supabase/supabase-js": "^2.57.4",
		"form-data": "^4.0.4",
		"mailgun.js": "^12.0.3"
	},
	"exports": {
		"./supabase": "./src/supabase/index.js",
		"./supabase_admin": "./src/supabase/index.admin.js",
		"./mailgun": "./src/mailgun/index.js"
	},
	"devDependencies": {
		"jsonc-parser": "^3.3.1"
	}
}