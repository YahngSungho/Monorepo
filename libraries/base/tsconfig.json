{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": false,
		"strictNullChecks": true,
		"target": "esnext",
		"verbatimModuleSyntax": true
	},
	"exclude": [
		".turbo/**",
		"**/.svelte-kit/**",
		"**/node_modules/**",
		"**/dist/**",
		"**/build/**",
		"**/.svelte/**",
		"**/.vercel_build_output/**",
		"**/.vercel/**",
		"**/coverage/**",
		"**/.history/**",
		"**/service-worker/**"
	],
	"include": ["**/*.ts", "**/*.js", "**/*.svelte", "tests/**/*", "src/**/*"]
}
