{
	"_comments": [
		"exclude와 include는 extends 되지 않아서 따로 써줘야 함",
		"compilerOptions.paths 쓸 거면 packajs.json의 import 부분에도 작성하기"
	],
	"compilerOptions": {
		"paths": {
			"$shadcn": ["../../libraries/ui/src/shadcn"]
		},
	},
	"exclude": [
		".turbo/**",
		"**/.svelte/**",
		"**/coverage/**",
		"**/static/**",
		"**/*.md",
		"**/*.mdx",
		"**/apps/**/*.md",
		"**/apps/**/*.mdx",
		"**/.svelte-kit",
		"**/.svelte-kit/**",
		"**/release/**",
		"**/releases/**",
		"**/releases",
		"**/pnpm-lock.yaml",
		"**/.cache/**",
		"**/.cache",
		"**/.turbo/**",
		"**/output/**",
		"**/test-results/**",
		"**/playwright-report/**",
		"**/storybook-static/**",
		"**/generated/**",
		"**/dist/**",
		"**/paraglide-output/**",
		"**/*.patch",
		"**/out/**",
		"**/build/**",
		"**/coverage/**",
		"**/logs/**",
		"**/package-lock.json",
		"**/yarn.lock",
		"**/.eslintcache/**",
		"**/.eslintcache",
		"**/.stylelintcache/**",
		"**/.stylelintcache",
		"**/.vscode-test/**",
		"**/.temp/**",
		"**/.temp",
		"**/temp",
		"**/temp/**",
		"**/Temp",
		"**/Temp/**",
		"**/*.tgz",
		"**/.npm/**",
		"**/.husky/**",
		"**/env/**",
		"**/venv/**",
		"**/.git/objects/**",
		"**/.git/subtree-cache/**",
		"**/.git",
		"**/.git/**",
		"**/.svn",
		"**/.hg",
		"**/CVS",
		"**/.DS_Store",
		"**/Thumbs.db",
		"**/*.log",
		"messages/**",
		"messages-helpers/**"
	],
	"extends": ["../library-base/tsconfig.json"],
	"include": [
		"src/**/*",
		"e2e/**/*",
		"*.js",
		"*.ts",
		"*.svelte",
		"*.cjs",
		"*.mjs",
		"**/*.js",
		"**/*.ts",
		"**/*.svelte",
		"**/*.cjs",
		"**/*.mjs",
		"src/types/*.ts"
	]
}
